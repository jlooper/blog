.content {
    height: auto;
    float: right;
    width: 60%;
    margin-top: 60px;
}

.content a {
    text-decoration:underline;
}

.page-top {
    width: 60%;
    position: fixed;
    right: 0;
    z-index: 3;
    background-color: var(--bg-color);
    height: 60px;
    border-bottom: 1px solid var(--border-color);
}

.page-top .nav {
    list-style: none;
    padding: 11px 30px;
    float: left;
    font-size: 12px;
    display: block;
    width: calc(100% - 30px);
}

.page-top .nav li {
    position: relative;
    display: initial;
    padding-right: 20px;
}

//sidebar 

.sidebar {
    width: 40%;
    top: 0;
    left: 0;
    position: fixed;
    z-index: 4;
    display: flex;
    flex-direction: column;
    min-height: 100%;
}

.sidebar .logo-title {
    text-align: center;
    padding-top: 240px;
    flex: 1;
}


//footer

.footer {
    clear: both;
    text-align: center;
    margin: 0 auto;
    bottom: 0;
    width: 100%;
    padding-bottom: 20px;
    flex: 0;
    position: relative;
}


